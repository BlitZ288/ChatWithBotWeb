@model List<ChatViewModel>
<div class="text-center mt-3">
    @if (Model.Any())
    {
        @foreach (var c in Model)
        {
            <div class="list-group card__Chat">
                <form id="@c.Id" asp-action="SelectChat" asp-controller="Chat" method="post">
                    <input type="hidden" asp-for="@c.Id" name="IdChat" />
                    <button class="list-group-item list-group-item-action flex-column align-items-start" type="submit">

                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@c.NameChat</h5>
                        </div>
                        <p class="mb-1">
                            Пользователи чата:
                            @foreach (var u in c.Users)
                            {
                                @u.Name 
                            }
                            <br />
                           
                        </p>
                        <p class="mb-1">
                            Боты:
                            @foreach (var b in c.Bots)
                            {
                                @b.NameBot
                            }
                        </p>
                    </button>

                </form>
            </div>
        }
    }
    else { 
        
            <h2 class="text-center">Чатов пока нет </h2>    
    }
</div>